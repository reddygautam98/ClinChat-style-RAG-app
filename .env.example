# Environment variables for ClinChat RAG Application
# Copy this to .env and fill in your values

# API Keys
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Application Settings
APP_NAME=ClinChat RAG
APP_VERSION=1.0.0

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Logging
LOG_LEVEL=INFO

# CORS Settings
ALLOWED_ORIGINS=*

# Vector Store Settings
VECTOR_STORE_PATH=./data/vectorstore
CHUNK_SIZE=1000
CHUNK_OVERLAP=100

# Model Settings
MAX_TOKENS=2000
TEMPERATURE=0.1

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Health Check
HEALTH_CHECK_INTERVAL=30

# Database (if needed for future expansion)
DATABASE_URL=sqlite:///./clinch.db

# Redis (for caching, if needed)
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AWS Configuration (for ECS deployment)
AWS_REGION=eu-north-1
AWS_ACCOUNT_ID=607520774335

# ECS Configuration
ECS_CLUSTER_NAME=clinchat-cluster
ECS_SERVICE_NAME=clinchat-service
ECS_TASK_DEFINITION=clinchat-task