# Environment variables for HealthAI RAG Application - Production/ECS
# These should be set in your ECS Task Definition as Environment Variables

# Application Settings
APP_NAME=HealthAI RAG
APP_VERSION=1.0.0
DEBUG=False
HOST=0.0.0.0
PORT=8080

# API Keys (Set these in ECS Task Definition)
GOOGLE_GEMINI_API_KEY=
GROQ_API_KEY=

# Database Configuration (Update with your actual values)
DATABASE_URL=
REDIS_URL=

# Vector Store Configuration
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_TOKENS=4000
TEMPERATURE=0.1

# Fusion AI Configuration
FUSION_AI_ENABLED=True
FUSION_STRATEGY=weighted_average
GEMINI_WEIGHT=0.6
GROQ_WEIGHT=0.4
FUSION_CONFIDENCE_THRESHOLD=0.7
FUSION_MAX_RETRIES=2

# Security (Generate a secure secret key for production)
SECRET_KEY=
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/healthai.log